<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0"
            name="bw-common">
    <dependencies>
        <layer name="core-server"/>
        <layer name="elytron"/>
        <layer name="web-server"/>
        <layer name="jms-activemq"/>
